<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_ecran"
    tools:context=".activities.DoctorDashboardActivity">

    <!-- En-tÃªte (Header) Docteur -->
    <View
        android:id="@+id/enteteDocteur"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/docteur_vert"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titreDocteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_doctor"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_doctor"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        app:layout_constraintStart_toStartOf="@+id/titreDocteur"
        app:layout_constraintTop_toBottomOf="@+id/titreDocteur" />

    <TextView
        android:id="@+id/tvPlanningHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#E8F5E9"
        android:text="Planning du : -- / -- Patients"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/enteteDocteur"/>

    <!-- Liste des rendez-vous -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listeRendezVous"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tvPlanningHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_doctor_appointment" />

</androidx.constraintlayout.widget.ConstraintLayout>

