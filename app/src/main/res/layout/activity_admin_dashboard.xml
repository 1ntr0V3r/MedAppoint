<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_ecran"
    tools:context=".activities.AdminDashboardActivity">

    <!-- En-tête (Header) spécifique Admin -->
    <View
        android:id="@+id/enteteAdmin"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/admin_gris"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titreAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_admin"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_admin"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        app:layout_constraintStart_toStartOf="@+id/titreAdmin"
        app:layout_constraintTop_toBottomOf="@+id/titreAdmin" />

    <!-- Liste des utilisateurs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listeUtilisateurs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/enteteAdmin"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_user" />

</androidx.constraintlayout.widget.ConstraintLayout>

