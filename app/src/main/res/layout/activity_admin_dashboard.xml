<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_ecran"
    tools:context=".activities.AdminDashboardActivity">

    <!-- En-tête (Header) spécifique Admin -->
    <View
        android:id="@+id/enteteAdmin"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/admin_gris"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titreAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_admin"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_admin"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        app:layout_constraintStart_toStartOf="@+id/titreAdmin"
        app:layout_constraintTop_toBottomOf="@+id/titreAdmin" />

    <!-- Liste des utilisateurs -->
    <LinearLayout
        android:id="@+id/layoutTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/enteteAdmin">
        
        <Button
            android:id="@+id/btnTabRequests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PENDING"
            android:textSize="12sp"
            android:backgroundTint="#FF9800"
            android:layout_marginEnd="4dp"/>
        
        <Button
            android:id="@+id/btnTabDoctors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Méd."
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnTabPatients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pat."
            android:textSize="12sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listePrincipale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabs"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

