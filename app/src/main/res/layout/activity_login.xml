<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/fond_ecran"
    tools:context=".activities.LoginActivity">

    <!-- Titre de l'application -->
    <TextView
        android:id="@+id/titreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/texte_principal"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sousTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tagline"
        android:textSize="16sp"
        android:textColor="@color/admin_gris"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titreApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Carte de Connexion -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/sousTitre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_login"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/texte_principal"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/champEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:hint="@string/hint_email_login"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/champMotDePasse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:hint="@string/hint_password_login"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/boutonConnexion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_login"
                android:backgroundTint="@color/bleu_medical"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Lien Inscription -->
    <TextView
        android:id="@+id/lienInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_register"
        android:textSize="14sp"
        android:textColor="@color/patient_bleu"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/sousTitre" 
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

