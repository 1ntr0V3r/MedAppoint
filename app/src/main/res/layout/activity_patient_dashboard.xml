<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_ecran"
    tools:context=".activities.PatientDashboardActivity">

    <!-- En-tÃªte (Header) Patient -->
    <View
        android:id="@+id/entetePatient"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/patient_bleu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titrePatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_patient"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_patient"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        app:layout_constraintStart_toStartOf="@+id/titrePatient"
        app:layout_constraintTop_toBottomOf="@+id/titrePatient" />

    <!-- Liste des rendez-vous -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listeRendezVous"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/entetePatient"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_patient_appointment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Ajouter un RDV"
        app:backgroundTint="@color/patient_bleu"
        app:tint="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>

